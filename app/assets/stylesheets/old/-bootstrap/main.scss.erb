input[type="checkbox"].form-control {
    float: left;
    width: 18px;
    height: 18px;
    margin-top: 1px;
}

.add_new_popup {
    position: fixed;
    top: 50px;
    left: 50%;
    margin-left: -210px;
    width: 350px;
    padding: 20px 30px 40px 30px;
    background-color: #f7f7f7;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    border-radius: 5px;
    -moz-box-shadow: 0 0 5px #888;
    -webkit-box-shadow: 0 0 5px#888;
    box-shadow: 0 0 5px #888;

    ol {
        margin: 0;
        padding: 0;
    }

    label {
        display: inline-block;
        position: relative;
        padding: 0;
        margin-bottom: 5px;
        font-size: 13px;
        font-weight: normal;
        color: #6e829b;
    }

    .form-horizontal {
        margin: 0;
        .form-group {
            margin: 0;
        }
    }

    .col-md-12 {
        width: auto;
        padding: 0;

    }

    .submit-box {
        padding: 0;
        text-align: left;

        span {
            margin: 2px 8px 0 8px;
        }
    }

    .form-control {
        margin-bottom: 15px;
        width: 290px;

        input {
            width: 290px;
        }
    }

    .reset {
        position: relative;
        top: 2px;
    }

    .select2-container {
        display: block;
        width: 290px;
    }
}