.error-message {
    float: left;
    position: relative;
    padding: 3px 10px 4px 10px;
    color: #fff;
    font-size: 12px;
    background-color: #cf7573;
    font-weight: bold;
    font-family: "Arial",sans-serif;

    .error-buble {
        position: absolute;
        top: 0;
        left: -5px;
        width: 5px;
        height: 6px;
        background: url(<%=image_path('admin/icons/buble.png')%>) 0 0 no-repeat;
    }
}