<%
    concat render :partial => 'rademade_admin/_blocks/header'
    concat render :partial => 'rademade_admin/_blocks/menu'
%><div class="content">
    <div id="pad-wrapper" class="form-page">
        <div class="table-wrapper products-table">

            <div class="row">
                <%= breadcrumbs.render(:format => :inline) %>
            </div>

            <% if content_for?(:page_header) %>
                <div class="row head">
                    <div class="col-md-12">
                        <%= yield(:page_header) %>
                    </div>
                </div>
            <% end %>

            <% if content_for?(:nav_buttons) %>
                <div class="row filter-block">
                    <div class="pull-right">
                        <%= yield(:nav_buttons) %>
                    </div>
                </div>
            <% end %>

            <%= yield(:content) if content_for?(:content) %>

        </div>
    </div>
</div>