<div class="login-bg">
  <img class="admin-logo" src="<%= image_path('rademade_admin/logos/logo.png') %>" alt="Rademade.com">
  <div class="login-form">
      <p class="login-form-title"><%= t('rademade_admin.login') %></p>
      <%= semantic_form_for(RademadeAdmin.user_class.new, :url => [:sessions],
                            :as => :data, :html => { :id => 'login-form',}) do |f| %>

            <div class="form-box"><%
                 concat f.input :email,
                                :label => false,
                                :input_html => {:class => 'form-input'}
              %><label class="form-label login" for="data_email"><i class="glyphicon glyphicon-user"></i></label>
            </div>
            <div class="form-box"><%
               concat f.input :password,
                              :label => false,
                              :input_html => {:class => 'form-input'}
                %><label class="form-label password" for="data_password"><i class="glyphicon glyphicon-lock"></i></label>
            </div>
            <div class="form-box"><%
               concat f.action :submit,
                               :label => t('rademade_admin.login'),
                               :as => :button,
                               :button_html => {:class => 'btn blue-btn login-btn'}
            %></div><%
        end
      %></div>
</div>
