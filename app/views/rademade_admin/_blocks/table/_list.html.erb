<%
is_sortable = @sortable_service.has_position?
%><tbody data-sortable="<%= is_sortable %>"><%
    @items.each do |item|
        %><tr class="content-table-row<%
            if is_sortable
                %> is-draggable" data-position="<%= item.position %><%
            end
        %>" data-id="<%= item.id %>"><%
            @list_fields.each_with_index do |field, index|
                is_first = index.zero?
                %><td class="content-table-cell<%
                    if is_first
                        %> show-sdisplay<%
                    end
                %>">
                    <%# is-highlight <span class="checked"></span> %>
                    <span class="text"><%= display_item_value(item, field)%></span><%
                    if is_first && is_sortable
                        %><i class="draggable-btn"></i><%
                    end
                %></td><%
            end
            %><td class="content-table-cell">
                <span class="content-actions-list"><%
                    concat render @template_service.button_edit_block, :item => item
                    concat render @template_service.button_hide_block, :item => item
                    concat render @template_service.button_preview_block, :item => item
                    concat render @template_service.button_destroy_block, :item => item
                %></span>
            </td>
        </tr><%
    end
%></tbody>