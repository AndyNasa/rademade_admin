<%=render :partial => 'admin/_blocks/header'%>

<%=render :partial => 'admin/_blocks/menu'%>

<div class="content">

    <div id="pad-wrapper" class="form-page">

        <div class="table-wrapper products-table ">

            <div class="row">
                <div class="breadcrumbs col-md-12">
                  <%= link_to 'Dashboard', [:admin, :root] %>
                  <% if content_for?(:last_crumbs)%>
                      <span class="separator">-></span>
                      <%= yield(:last_crumbs) %>
                  <% end %>
                </div>
            </div>

            <% if content_for?(:page_header)%>
                <div class="row head">
                    <div class="col-md-12">
                        <%= yield(:page_header) %>
                    </div>
                </div>
            <% end %>

            <% if content_for?(:nav_buttons)%>
                <div class="row filter-block">
                    <div class="pull-right">
                        <%= yield(:nav_buttons) %>
                    </div>
                </div>
            <% end %>

            <%= yield(:content) if content_for?(:content) %>

        </div>

    </div>

</div>